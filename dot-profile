# default prompt
# export PS1="\h:\W \u\$ "
parse_git_branch() {
  $(which git) branch 2> /dev/null | sed -e '/^[^*]/d' -e 's/* \(.*\)/(\1)/'
}

# ~/dev/dotfiles(my-branch-name)ยง
