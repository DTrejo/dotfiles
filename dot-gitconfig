[core]
	excludesfile = ~/.gitignore
	autocrlf = input
	safecrlf = true
	whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
[color]
	diff = auto
	status = auto
	branch = auto
	ui = auto
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
	whitespace = red reverse
[alias]
	ai = add --interactive
	br = branch
	ci = commit
	co = checkout
	df = diff
	st = status -s
	lol = log --pretty=oneline --abbrev-commit --decorate --color
	lob = log --pretty=oneline --abbrev-commit --graph --decorate --color --branches
	loa = log --pretty=oneline --abbrev-commit --graph --decorate --color --all
	lop = log -p
	ls = ls-files
	unstage = reset HEAD
	uncommit = reset --soft # include a hash at the end!
	amend = commit --amend
	ammend = commit --amend
	wc = whatchanged
	ls-ignored = ls-files --exclude-standard --ignored --others
	# diff that highlights the changed lines, and ALSO changed words and chars
	# git wds does the same for staged changes.
	wd = diff --color-words
	wds = diff --color-words --staged
[diff]
	renamelimit = 10000
	renames = copies
	mnemonicprefix = true
[branch]
	autosetupmerge = true
[push]
	default = tracking
[rerere]
	enabled = true
[merge]
	stat = true
[pager]
	color = true
[github]
	user = DTrejo
